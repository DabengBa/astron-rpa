{
  "name": "iflyrpa",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "scripts": {
    "cz": "cz",
    "preinstall": "node -e \"const ua=(process.env.npm_config_user_agent||process.env.BUN_INSTALL||''); if(!/bun|pnpm/i.test(ua)){console.error('Please use bun or pnpm to install dependencies.'); process.exit(1)}\"",
    "lint": "eslint",
    "lint:fix": "eslint --fix \"**/*.{vue,ts,tsx,js,jsx}\"",
    "set-env": "pnpm --filter @rpa/web-app run set-env",
    "set-env:saas": "pnpm --filter @rpa/web-app run set-env saas",
    "set-env:enterprise": "pnpm --filter @rpa/web-app run set-env enterprise",
    "dev:web": "pnpm --filter @rpa/web-app run dev",
    "dev:desktop": "pnpm --filter astron-rpa run dev",
    "build:web": "pnpm --filter @rpa/web-app run build",
    "build:desktop": "pnpm --filter astron-rpa run build:win",
    "i18n": "env-cmd lobe-i18n locale",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@lobehub/i18n-cli": "^1.25.1",
    "@vitest/ui": "3.2.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "env-cmd": "^10.1.0",
    "eslint": "^9.32.0",
    "eslint-plugin-format": "^1.0.1",
    "fast-glob": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.0",
    "vitest": "^3.2.4"
  },
  "volta": {
    "node": "22.15.0"
  },
  "workspaces": {
    "packages": [
      "locales",
      "packages/*",
      "components/**",
      "!**/test/**"
    ],
    "catalog": {
      "@vitejs/plugin-vue": "^6.0.3",
      "@vitejs/plugin-vue-jsx": "^5.1.3",
      "ant-design-vue": "^4.2.6",
      "vite": "^8.0.0-beta.5",
      "tailwind-merge": "^3.4.0",
      "tailwindcss": "^3.4.4",
      "tsdown": "^0.19.0-beta.2"
    }
  }
}
